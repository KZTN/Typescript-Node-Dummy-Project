{
  "compilerOptions": {
	"target": "es6",
  "outDir": "./dist",
  "rootDir": "./src",
  "noEmitOnError": true,
  "noImplicitAny": true,
  "removeComments": true,
  "module": "commonjs",
  "strict": true,
  "strictNullChecks": true,
	"inlineSourceMap": true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "sourceMap": false,
	"skipLibCheck": true,
	"types": [
    "node"
  ],
  "typeRoots": [
    "node_modules/@types"
	],
	"baseUrl": "./src",
  },
  "lib": ["es2015"]
}
